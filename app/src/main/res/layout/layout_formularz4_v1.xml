<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    tools:context=".formularz4.Formularz4_Wydanie_Pozycji">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewZlecenie"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Zlecenie / Zbiór"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewLinia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Linia / KP"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="4"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextZlecenie"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:ems="9"
                android:hint="zbiór"
                android:background="#edff8c"
                android:inputType="text"
                android:layout_weight="2"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextLinia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:ems="9"
                android:background="@color/colorWhite"
                android:hint="linia"
                android:inputType="text"
                android:layout_weight="4"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLokalizacja"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Lokalizacja"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewWydano"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Wydano"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="4"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextLokalizacja"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:ems="9"
                android:hint="..."
                android:background="#f9ffd8"
                android:inputType="text"
                android:layout_weight="2"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextWydano"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:ems="9"
                android:hint="..."
                android:background="#f9ffd8"
                android:inputType="text"
                android:layout_weight="4"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInformacjeOWydanymWyrobie"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Informacje o wydanym wyrobie"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextInformacjeOWydanymWyrobie"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:ems="9"
                    android:hint="..."
                    android:background="#f9ffd8"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPrzywieszkaWyrobu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Przywieszka wyrobu: "
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextWydanePozycje"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:ems="9"
                android:hint="..."
                android:background="@color/colorWhite"
                android:inputType="text"
                android:layout_weight="1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/mainColor"
                android:background="@drawable/ic_checklist_white"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewWydanePozycje"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:text="Wydane pozycje"
                android:textSize="20sp"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextPrzywieszka"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:ems="9"
                    android:hint="..."
                    android:background="@color/colorWhite"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>