<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Procedura_PozycjaPartia_HistoriaZycia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout3_5_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVie_scanme"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:srcCompat="@drawable/scann_icon" />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="@color/mainColor"
                android:text="back" />

        </LinearLayout>

        <include layout="@layout/etykieta_formularz1" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <LinearLayout
                    android:id="@+id/layout3_1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <include layout="@layout/columns_names3" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </ScrollView>
        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>