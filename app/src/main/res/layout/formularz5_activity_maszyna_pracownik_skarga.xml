<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_4"
    tools:context=".formularz5.Formularz5_Maszyna_Pracownik_Skarga">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="1dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <ExpandableListView
                    android:id="@+id/expandableListView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_white2"
                    android:textColor="@color/white"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:layout_weight="1"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewMaszyna"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_grey_full"
                    android:textColor="@color/black"
                    android:layout_weight="2"

                    android:gravity="center"
                    android:hint="maszyna"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/buttonScan"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/scann_icon"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="1dp"
                android:orientation="horizontal">

                <ExpandableListView
                    android:id="@+id/expandableListView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_white2"
                    android:textColor="@color/white"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:layout_weight="1"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewGodzinyZmiana"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_grey_full"
                    android:textColor="@color/black"
                    android:layout_weight="2"

                    android:gravity="center"
                    android:hint="zmiana"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="1dp"
                android:orientation="horizontal">

                <ExpandableListView
                    android:id="@+id/expandableListView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_white2"
                    android:textColor="@color/white"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:layout_weight="1"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewOperator"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_grey_full"
                    android:textColor="@color/black"
                    android:layout_weight="2"

                    android:gravity="center"
                    android:hint="operator"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTelefon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_grey_full"
                    android:textColor="@color/black"
                    android:layout_weight="2"

                    android:gravity="center"
                    android:hint="telefon"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="1dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <ExpandableListView
                    android:id="@+id/expandableListView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_white2"
                    android:textColor="@color/white"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:layout_weight="1"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKomentarz"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/input_background_grey_full"
                    android:textColor="@color/black"
                    android:layout_weight="2"

                    android:gravity="center"
                    android:hint="komentarz"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonZdjecie"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:background="@drawable/input_background_grey_full"
                    android:layout_marginRight="30dp"
                    android:text="Zdjęcie"
                    android:drawableLeft="@drawable/ic_photo_white"
                    />

                <Button
                    android:id="@+id/buttonWyslij"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:background="@drawable/input_background_grey_full"
                    android:drawableLeft="@drawable/ic_send_white"
                    android:layout_marginLeft="30dp"
                    android:text="Wyślij"
                    />


            </LinearLayout>





        </LinearLayout>

</RelativeLayout>