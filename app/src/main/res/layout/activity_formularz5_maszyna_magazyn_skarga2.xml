<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginHorizontal="5dp"-->
<!--                android:layout_weight="1"-->
<!--                android:background="@tools:sample/avatars" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTelefon"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="telefon"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout3_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputTelefon"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="telefon"
                    android:inputType="text"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/greyColor" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSMS"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="SMS wiadomoćć"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout8_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxSMS"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textSize="8sp" />

                <EditText
                    android:id="@+id/inputSMS"
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="SMS"
                    android:inputType="text"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/greyColor" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUwaga"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="uwaga"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout6_1h"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputUwaga"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="uwaga"
                    android:inputType="textMultiLine"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/greyColor" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWyslij"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/input_background_grey_full"
                android:drawableLeft="@drawable/ic_send_white"
