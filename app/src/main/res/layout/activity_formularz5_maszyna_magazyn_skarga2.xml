<!--                    android:hint="przewinienie"-->
<!--                    android:inputType="textMultiLine"-->
<!--                    android:textColor="@color/mainColor"-->
<!--                    android:textColorHint="@color/mainColor" />-->

                <Button
                    android:id="@+id/buttonDodajPrzewinienie"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_add_24" />

                <Button
                    android:id="@+id/buttonSzukajPrzewinienie"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_search_24" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewZdjecia"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="zdjęcia"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewZdjecia"
                    android:layout_width="340dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/buttonZdjecie"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top"
                    android:background="@drawable/ic_photo_white"
                    android:gravity="center" />

            </LinearLayout>

