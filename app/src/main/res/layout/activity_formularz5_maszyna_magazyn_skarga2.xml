<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMaszyna"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="maszyna barcode"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout1_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputMaszyna"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="maszyna"
                    android:inputType="text"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/greyColor" />

                <Button
                    android:id="@+id/buttonScanBarcodeMaszyna"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_scanner_24" />

                <Button
                    android:id="@+id/buttonSzukajMaszyna"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_search_24" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewOperator"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="operator"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout2_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputOperator"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="operator"
                    android:inputType="text"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/greyColor"
                    />

                <Button
                    android:id="@+id/buttonSzukajOperator"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_search_24" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPrzewinienie"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:text="przewinienie"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout_search1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/inputPrzewinienie"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:hint="przewinienie"
                        android:inputType="text"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/greyColor"
                        />

                </LinearLayout>
